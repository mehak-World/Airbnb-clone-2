<%- include("../boilerplate.ejs") %>

<body>
  <div style = "margin: 5%">
    <div>
      <% if (success && success.length > 0) { %>
        <div class="alert alert-success" style = "width: 50%; margin: auto; margin-top: 10px;">
            <%= success %>
        </div>
    <% } %>
  
    <% if (error && error.length > 0) { %>
      <div class="alert alert-danger" style = "width: 50%; margin: auto; margin-top: 10px;">
          <%= error %>
      </div>
  <% } %>
    
      <h2 class="heading">All Listings</h2>
    </div>
    <div class="listings">
      <% for(let listing of listings) { %>
        <a href = "/listings/<%= listing.id %>">
          <div class="listing-card"  >
            <img src = "<%= listing.image.url %>" width = "100%" height = "280px">
            <div style = "padding: 10px">
                <p><span style = "color: black"><%= listing.name %></span><br>
                   <span style = "color: rgb(252, 80, 80); font-weight: bold"> $<%= listing.price %> per night</span></p>
            </div>
          
        </div>
        </a>
    
      <% } %>
    </div>
  </div>

</body>
